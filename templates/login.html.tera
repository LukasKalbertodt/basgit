{% extends "base" %}
{% block title %}Login - BasGit{% endblock title %}

{% block content %}
    {% if flash %}
        <p>
        {{ flash.name }}: {{ flash.msg }}
        </p>
    {% endif %}
    <form method="post" action="/login">
        <input type="text" name="user_name">
        <input type="submit" value="Login">
    </form>
{% endblock content %}

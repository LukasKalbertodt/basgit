{% extends "base" %}
{% block title %}Login â€“ BasGit{% endblock title %}

{% block content %}
    {% if flash %}
        <div class="login-flash flash-{{ flash.name }}">
            {{ flash.msg }}
        </div>
    {% endif %}
    <div class="login-box">
        <h2>Sign in to BasGit</h2>
        <hr />
        <form method="post" action="/login">
            <input type="text" name="id" placeholder="Username or email address">
            <input type="password" name="password" placeholder="Password">
            <input type="submit" value="Login">
        </form>

        <hr />
        <p>New to BasGit? <a href="/join">Create an account!</a>
    </div>
{% endblock content %}
